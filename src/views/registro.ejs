<!DOCTYPE html>
<html>
  <!-- Head -->
  <%- include('./partials/head') %>
  <!-- Head -->
  <body>
    <!-- Header -->
    <%- include('./partials/header') %>
    <!-- Header -->
    <main>
      <form action="" method="POST" novalidate>
       
          <div class="form-block">
            <label for="name">Ingrese su nombre</label>
            <input type="text" id="name" name="name" value="<%= locals.old && locals.old.name ? old.name : null%>">
            <p class="text-danger">
              <%= locals.errores && locals.errores.name ? errores.name.msg : null %>
            </p>
            
          </div>
          <div class="form-block">
            <label for="color">Elija un color</label>
            <select name="color" id="color" class="input-select">
              <option value="" hidden selected>Seleccione un color</option>
              <option value="naranja" <%= locals.old && old.color === 'naranja' ? 'selected' : null%> >Naranja</option>
              <option value="violeta" <%= locals.old && old.color === 'violeta' ? 'selected' : null%> >Violeta</option>
              <option value="azul" <%= locals.old && old.color === 'azul' ? 'selected' : null%> >Azul</option>
            </select>
             <p class="text-danger">
              <%= locals.errores && locals.errores.color ? errores.color.msg : null %>
            </p>
          </div>
          <div class="form-block">
            <label for="email">Ingrese su email</label>
            <input type="email" id="email" name="email" value="<%= locals.old && locals.old.email ? old.email : null%>">
            <p class="text-danger">
              <%= locals.errores && locals.errores.email ? errores.email.msg : null %>
            </p>
          </div>
          <div class="form-block">
            <label for="edad">Ingrese su edad</label>
            <input type="number" id="edad" name="edad" value="<%= locals.old && locals.old.edad ? old.edad : null%>">
            <p class="text-danger">
              <%= locals.errores && locals.errores.edad ? errores.edad.msg : null %>
            </p>
          </div>
            
          <div class="form-check form-switch">
            <label class="form-check-label" for="flexSwitchCheckDefault">Recordar</label>
            <input class="form-check-input switch" type="checkbox" id="flexSwitchCheckDefault" value="recordar" name="recordar">
        </div>
        <br>
        <div class="d-grid gap-2">
          <button type="submit">ENVIAR</button>
        </div>
      </form>
    </main>

    <!-- Footer -->
    <%- include('./partials/footer') %>
    <!-- Footer -->
  </body>
  <!-- ----scripts ----->
  <% - include('./partials/scripts') %>
  <!-- ----scripts---- -->
</html >